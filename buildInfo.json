{
    "repoName": "apogeejs-server-ide",

    "npmModule": {
        "taskList": [
            {
                "type": "copyAndReplace",
                "srcFileUrl": "/apogeejs-server-ide/package.json",
                "replacementList": [
                    {
                        "marker": "[RELEASE_VERSION]",
                        "lib": "this",
                        "type": "version"
                        
                    },
                    {
                        "marker": "[APOGEE_BUNDLE_DEP_VERSION]",
                        "lib": "apogeejs-app-bundle",
                        "type": "npmVersion"
                    }
                ]
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-app-bundle/style/apogeeAppBundle.css"
                ],
                "childFolder": "style"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-app-bundle/resources/**/*"
                ],
                "childFolder": "resources"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-app-bundle/ace_includes/**/*"
                ],
                "childFolder": "ace_includes"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-app-bundle/src/debugHook.js",
                    "/apogeejs-app-bundle/src/nodeGlobals.js",
                    "/apogeejs-server-ide/src/**/*"
                ],
                "childFolder": "src"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-server-ide/electron-cli.js"
                ]
            },
            {
                "type": "copyAndReplace",
                "srcFileUrl": "/apogeejs-server-ide/web/apogee.html",
                "replacementList": [
                    {
                        "marker": "[RELEASE_VERSION]",
                        "lib": "this",
                        "type": "version"
                    }
                ],
                "childFolder": "web"
            }
        ]
    }
}