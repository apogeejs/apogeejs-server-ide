{
    "repoName": "apogeejs-server-ide",
    "taskList": [
        {
            "type": "copyAndReplace",
            "srcFileUrl": "/apogeejs-server-ide/package.json",
            "replacementList": [
                {
                    "marker": "2.0.0-DEV-VERSION",
                    "lib": "this",
                    "type": "version"
                }
            ]
        },
        {
            "type": "copyAndReplace",
            "srcFileUrl": "/apogeejs-server-ide/web/apogee.html",
            "replacementList": [
                {
                    "marker": "[RELEASE_VERSION]",
                    "lib": "this",
                    "type": "version"
                }
            ],
            "childFolder": "web"
        },
        {
            "type": "copyFileList",
            "srcFileUrlList": [
                "/apogeejs-server-ide/electron-cli.js",
                "/apogeejs-server-ide/LICENSE",
                "/apogeejs-server-ide/README.md"
            ]
        },
        {
            "type": "copyFileList",
            "srcFileUrlList": [
                "/apogeejs-server-ide/src/**/*"
            ],
            "childFolder": "src"
        },
        {
            "type": "copyFileList",
            "srcFileUrlList": [
                "/apogeejs-admin/ext/ace/ace_1.4.3/ace_includes/**/*"
            ],
            "childFolder": "ace_includes"
        },
        {
            "type": "concatFileList",
            "srcFileUrlList": [
                "/apogeejs-view-lib/style/**/*",
                "/apogeejs-app-bundle/style/**/*",
                "/apogeejs-ui-lib/style/**/*",
                "/prosemirror-admin/compiledCss/editor.css",    
                "/apogeejs-admin/ext/handsontable/handsontable_6.2.0/handsontable.full.min.css"
            ],
            "destFileName": "apogeeAppBundle.css",
            "childFolder": "apogeejs-app-bundle/style"
        },
        {
            "type": "copyFileList",
            "srcFileUrlList": [
                "/apogeejs-ui-lib/resources/**/*",
                "/apogeejs-app-bundle/resources/**/*"
            ],
            "childFolder": "apogeejs-app-bundle/resources"
        },
        {
            "type": "copyFileList",
            "srcFileUrlList": [
                "/apogeejs-model-lib/src/debugHook.js",
                "/apogeejs-model-lib/src/nodeGlobals.js"
            ],
            "childFolder": "apogeejs-app-bundle/src"
        },
        {
            "type": "packageLib",
            "format": "cjs",
            "sourceFileUrl": "/apogeejs-app-bundle/src/apogeeAppBundle.js",
            "outputFileName": "apogeejs-app-bundle.js",
            "childFolder": "apogeejs-app-bundle/src",
            "externalLibMapping": {
                "/apogeejs-admin/ext/esprima/esprima_2.7.3/esprima.es.js": "esprima",
                "/apogeejs-admin/ext/ace/ace_1.4.3/ace.es.js": "ace-builds",
                "/apogeejs-admin/ext/handsontable/handsontable_6.2.0/handsontable.es.js": "handsontable",
                "/prosemirror-admin/dist/prosemirror-model.es.js": "prosemirror-model",
                "/prosemirror-admin/dist/prosemirror-state.es.js": "prosemirror-state",
                "/prosemirror-admin/dist/prosemirror-transform.es.js": "prosemirror-transform",
                "/prosemirror-admin/dist/prosemirror-view.es.js": "prosemirror-view",
                "/prosemirror-admin/dist/prosemirror-keymap.es.js": "prosemirror-keymap",
                "/prosemirror-admin/dist/prosemirror-commands.es.js": "prosemirror-commands",
                "/prosemirror-admin/dist/prosemirror-gapcursor.es.js": "prosemirror-gapcursor"
            }
        }
    ]

}
